[node1]
#description
description = "backup node1"
#connect to host node1
ssh_command = ssh postgres@{{ master_ip }}
#connect to host db PGSQLServer
conninfo = host={{ master_ip }} user=barman port=5432 dbname=postgres
retention_policy_mode = auto
retention_policy = RECOVERY WINDOW OF 7 days
wal_retention_policy = main
streaming_archiver=on
#Preffix ot path on host node1
path_prefix = /usr/pgsql-14/bin/
#slots info
create_slot = auto
slot_name = node1
#streaming exchange from DBPGSQLServer
streaming_conninfo = host={{ master_ip }} user=barman
#backup method
backup_method = postgres
archiver = off
